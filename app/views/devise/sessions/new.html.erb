<%= stylesheet_link_tag "sessions", "data-turbo-track": "reload" %>

<div class="contents row">
  <div class="container">
    <h2>Log in</h2>
    <%= form_with model: @user, url: user_session_path, id: "new_user", class: "new_user", local: true do |f| %>
      <div class="field">
        
        <%= f.email_field :email, placeholder: "email", autofocus: true %>
      </div>

      <div class="field">
        
        <%= f.password_field :password, placeholder: "password", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
  </div>
</div>
