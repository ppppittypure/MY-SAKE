 <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: "new_user", class: "new_user", local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %> <em>(6 characters maximum)</em><br />
        <%= f.text_field :name, autofocus: true, maxlength: "6" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div><div class="contents row">
  <div class="container">
  

      <div class="field">
        <%= f.label :profile %><br />
        <%= f.text_field :profile %>
      </div>
      <br>taste</br>
      <%= f.select :taste_id, [["さわやか", "さわやか"], ["クセあり", "クセあり"], ["こっくり", "こっくり"], ["飲みやすい", "飲みやすい"]], include_blank: "好みの味は?" %>
      
      <br>preference</br>
      <%= f.select :preference_id, [["パリピ", "パリピ"], ["しっとり", "しっとり"], ["ガッツリ", "ガッツリ"], ["♾️", "♾️"]], include_blank: "雰囲気は?" %>
      
      <br>flavor</br>
      <%= f.select :flavor_id, [["フルーティ", "フルーティ"], ["芳醇", "芳醇"], ["パンチ", "パンチ"], ["特になし", "特になし"]], include_blank: "香りは?" %>
      
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
